<div class="card mb-4 pb-4 listing">
  <div class="card-body p-0">
    <% if advisory.severity %>
      <span class='listing__badge badge bg-<%= advisory.severity.downcase == 'critical' ? 'danger' : advisory.severity.downcase == 'high' ? 'warning' : advisory.severity.downcase == 'medium' ? 'info' : 'secondary' %>'>
        <%= advisory.severity.humanize %>
      </span>
    <% end %>
    <div class="text-muted float-end listing__time">
        <% if advisory.withdrawn? %>
          <span title="<%= advisory.withdrawn_at %>">Withdrawn <%= time_ago_in_words advisory.withdrawn_at %> ago</span>
        <% else %>
          <span title="<%= advisory.published_at %>"><%= time_ago_in_words advisory.published_at %> ago</span>
        <% end %>
    </div>
    <h3 class="card-title listing__title mt-3">
      <% if advisory.url.present? %>
      <a href="<%= advisory.url %>">
        <%= advisory.title %><span class="listing__meta"> <%= advisory.uuid %> </span>
      </a>
      <% else %>
        <%= advisory.title %><span class="listing__meta"> <%= advisory.uuid %> </span>
      <% end %>
    </h3>
    <div class="mt-3 listing__details">
      <div class="d-flex align-items-top">
        <%= bootstrap_icon 'boxes', width: 18, height: 18, class: 'flex-shrink-0 me-2' %>
        <span class="me-3"><%= advisory.ecosystems.join(', ') %></span>
        <%= bootstrap_icon 'box', width: 18, height: 18, class: 'flex-shrink-0 me-2' %>
        <span><%= advisory.package_names.join(', ') %></span>
      </div>
    </div>
  </div>
</div>