<div class="card mb-4 pb-4 listing d-flex flex-row align-items-center">	
  <div class="card-body p-0">
    <% if package.status %>
      <span class="listing__badge badge bg-secondary">
        <%= package.status %>
      </span>
    <% end %>

    <h3 class="card-title listing__title mt-3">
      <%= link_to package.name, package.registry_url %>
      <% if package.description_with_fallback.present? %>
        <span class="listing__meta">
          <%= truncate package.description_with_fallback, :length => 100 %>
        </span>
      <% end %>
      <% if package.status %>
        <small class='badge bg-secondary'>
          <%= package.status %>
        </small>
      <% end %>
      <% if package.funding.present? %>
        <%= bootstrap_icon 'piggy-bank-fill',
          width: 16, height: 16, aria_hidden: 'true', focusable: 'false', role: 'img', class: 'flex-shrink-0 me-2', alt: 'Accepts funding'
        %>
      <% end %>
    </h3>

    
    <div class="mt-3 listing__details">
      <div class="d-flex align-items-top">
      <%= bootstrap_icon 'boxes',
        width: 16, height: 16, aria_hidden: 'true', focusable: 'false', role: 'img', class: 'flex-shrink-0 me-2'
      %>
      <span class="me-3"><%= package.ecosystem %></span>
      <% if package.latest_release_number %>
        <%= bootstrap_icon 'file-earmark-code',
          width: 16, height: 16, aria_hidden: 'true', focusable: 'false', role: 'img', class: 'flex-shrink-0 me-2'
        %>
        <span class="me-3"><%= package.latest_release_number %></span>
      <% end %>

      <% if package.latest_release_published_at %>
        <%= bootstrap_icon 'clock-history',
          width: 16, height: 16, aria_hidden: 'true', focusable: 'false', role: 'img', class: 'flex-shrink-0 me-2'
        %>
        <span class="me-3"><span title="<%= package.latest_release_published_at %>">Latest release: <%= time_ago_in_words package.latest_release_published_at %> ago</span></span>
      <% end %>
      <% if package.rankings.present? && package.rankings['average'] < 10.05 %>
        <%= bootstrap_icon 'asterisk',
          width: 16, height: 16, aria_hidden: 'true', focusable: 'false', role: 'img', class: 'flex-shrink-0 me-2'
        %>
        <span class="me-3">
          Top <%= [package.rankings['average'].round(1), 0.1].max %>% on <%= package.registry_name %>
        </span>
      <% end %>
      </div>
    </div>
  </div>
</div>
