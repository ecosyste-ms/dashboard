<% @meta_title = "New Project" %>
<% @meta_description = "Add a new project to track" %>

<div class="container mt-5">
  <h1 class="mb-4">Add a new project</h1>
  <div class="row">
    <div class="col-12 col-lg-8">
      <%= form_with model: @project, local: true do |f| %>
        <% if @project.errors.any? %>
          <div class="alert alert-danger" role="alert">
            <h4><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h4>
            <ul class="mb-0">
              <% @project.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <fieldset class="form-group mb-5">

        
            <%= f.label :url, "Repository URL", class: "form-label" do %>
              <p class="mb-0">Repository URL</p>
              <p class="text-muted small mb-0">Enter a valid URL to a repository, we support GitHub, GitLab, and other hosting platforms</p>
            <% end %>
            <%= f.url_field :url, 
                class: "form-control  border-purple-light", 
                placeholder: "https://github.com/owner/repository", 
                required: true,
                title: "Please enter a valid repository URL",
                value: params[:url] || @project.url %>
           
   

        
          <h3 class="h5 mb-3 mt-5">What happens next?</h3>
          <div class="d-flex align-items-start gap-2 mb-2">
            <span class="badge text-bg-light rounded-pill">1</span>
            <span>We&apos;ll create your project and start syncing data</span>
          </div>
          <div class="d-flex align-items-start gap-2 mb-2">
            <span class="badge text-bg-light rounded-pill">2</span>
            <span>You&apos;ll see real-time progress as we gather repository data, issues, commits, and more</span>
          </div>
          <div class="d-flex align-items-start gap-2 mb-5">
            <span class="badge text-bg-light rounded-pill">3</span>
            <span>Once complete, you&apos;ll have access to comprehensive analytics and insights</span>
          </div>
         <hr />

        <div class="d-flex gap-2 mt-5">
          <%= f.submit "Add Project", class: "btn btn-primary rounded-pill" %>
          <%= link_to "Cancel", projects_path, class: "btn btn-outline-secondary rounded-pill" %>
        </div>
      <% end %>
    </fieldset>
    </div>
    <div class="col-12 col-lg-4">
      <div class="bg-light p-4 rounded">
        <h4 class="h6 mb-3">Insights available</h4>
        <ul class="list-unstyled">
          <li class="mb-2">
            <%= bootstrap_icon 'check-circle', width: 16, height: 16, class: 'text-success me-2' %>
            Repository metadata and statistics
          </li>
          <li class="mb-2">
            <%= bootstrap_icon 'check-circle', width: 16, height: 16, class: 'text-success me-2' %>
            Package and dependency tracking
          </li>
          <li class="mb-2">
            <%= bootstrap_icon 'check-circle', width: 16, height: 16, class: 'text-success me-2' %>
            Issues and pull request analytics
          </li>
          <li class="mb-2">
            <%= bootstrap_icon 'check-circle', width: 16, height: 16, class: 'text-success me-2' %>
            Commit history and contributor insights
          </li>
          <li class="mb-2">
            <%= bootstrap_icon 'check-circle', width: 16, height: 16, class: 'text-success me-2' %>
            Release and tag monitoring
          </li>
          <li class="mb-2">
            <%= bootstrap_icon 'check-circle', width: 16, height: 16, class: 'text-success me-2' %>
            Security advisory tracking
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>