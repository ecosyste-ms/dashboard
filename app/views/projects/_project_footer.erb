 

  <div class="container mt-5">
    <hr />
    <div class="row">
      <div class="col-12 col-lg-8 offset-lg-2 text-center">
        <div class="col-lg-7 container text-center">
          <h2 class="h3 mb-4 mt-5">View another project</h2>
        </div>
        <div class="well p-4 my-3">
          <div class="col-lg-12 container text-center">
            <%= form_with url: lookup_projects_path, method: :post, html: { class: "row g-2 justify-content-center" } do %>
              <label for="url">Enter a github repository URL</label>
              <div class="input-group rounded-input-group mt-3 mb-4">
                <%= text_field_tag :url, nil, class: "form-control", id: "url", placeholder: "URL: eg https://github.com/ecosyste-ms/packages", size: 50 %>
                <%= submit_tag "View dashboard", class: "btn btn-danger pe-4" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
