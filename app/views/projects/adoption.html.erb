<% @meta_title = "#{@project}" %>
<% @meta_description = "Stats for #{@project}" %>

<%= render 'project_header' %>
<div class="container">

  <div class="dashboard-layout">
    <%= render 'nav' %>

    <div class="dashboard-layout__dboard">
      <h1 class="mb-4">Adoption</h1>

      <%= render 'date_nav' %>

      <div class="dashboard-grid">
      <div class="full-width-widget">
            <div class="card well p-3 border-0">
              <div class="card-body">
                <h5 class="card-title">Ranking 
                <a href="#" aria-labelledby="ranking-help">
                  <%= bootstrap_icon 'question-circle',
                  width: 18, height: 18, aria_hidden: 'true', focusable: 'false', role: 'img', class: 'mb-1', title: 'what is ranking?'
                  %>
                  <span id="ranking-help" class="visually-hidden">What is ranking?</span>
                 </a></h5>
                <div class="stat-card mb-2">
                  <div class="stat-card-body">
                    <div class="stat-card-body">
                      <span class="stat-card-title stat-card-title--large stat-card-number stat-card-number-positive">Top 3%</span>
                      <span class="stat-card-text">
                        on npmjs.org
                      </span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="three-equal-widgets">
            <%= stat_card_widget 'Dependent packages', @project.dependent_packages_count, nil, title_class: "card-title small", stat_size: "large" %>
            <%= stat_card_widget 'Dependent repos', @project.dependent_repos_count, nil, title_class: "card-title small", stat_size: "large" %>
            <%= stat_card_widget 'Downloads', @project.downloads, nil, title_class: "card-title small", stat_size: "large" %>
          </div>
      <div class="two-thirds-widgets">
          <%= stat_card_widget 'Downloads', 100289, 98002, increase_good: true, symbol: '', title_class: "card-title small", stat_size: "small", card_class: " two-thirds-widgets__large" %>
          <%= stat_card_widget 'Package downloads', 75, 65, increase_good: true, symbol: '%', title_class: "card-title small", stat_size: "large" %>
        </div>
        <div class="three-equal-widgets">
          <%= stat_card_widget 'Watchers', 1672, 1232, increase_good: true, symbol: '', title_class: "card-title small", stat_size: "small" %>
          <%= stat_card_widget 'Forks', 75, 65, increase_good: true, symbol: '', title_class: "card-title small", stat_size: "large" %>
          <%= stat_card_widget 'Stars', 75, 65, increase_good: true, symbol: '', title_class: "card-title small", stat_size: "large" %>
        </div>
        
        </div>
      </div>
    </div>
  </div>
</div>