<% @meta_title = "#{@project}" %>
<% @meta_description = "Stats for #{@project}" %>

<%= render 'project_header' %>
<div class="container">


  <div class="dashboard-layout">
    <%= render 'nav' %>

    <div class="dashboard-layout__dboard">
      <h1 class="mb-4">Finance</h1>
      <%= render 'date_nav' %>

      <div class="dashboard-grid">
        <div class="three-equal-widgets">
          <%= small_widget 'Contributions', 10000, 9000, symbol: '$', currency: true %>
          <%= small_widget 'Payments', 5000, 4000, symbol: '$', currency: true %>
          <%= small_widget 'Balance', 5000, 5000, symbol: '$', currency: true %>
        </div>
        <div class="two-thirds-widgets">
          <%= stat_card_widget 'Donors', 15, 11, symbol: '', title_class: "card-title small", card_class: " two-thirds-widgets__small" %>
          <%= stat_card_widget 'Recurring donors', 75, 65, symbol: '%', title_class: "card-title small", card_class: " two-thirds-widgets__large" %>
        </div>
        <div class="two-thirds-widgets">
          <%= stat_card_widget 'Unique payees', 11, 9, symbol: '', title_class: "card-title small", card_class: " two-thirds-widgets__large" %>
          <%= stat_card_widget 'Reimbursements', 10000, 9000, symbol: '$', currency: true, title_class: "card-title small", card_class: " two-thirds-widgets__small" %>
        </div>
      </div>
    </div>
  </div>
</div>