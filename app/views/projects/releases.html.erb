<% @meta_title = "#{@project} - Releases" %>
<% @meta_description = "View release history and version information for #{@project} including changelogs and download statistics" %>

<div class="container-md">

  <%= render 'nav' %>

  <h1>
    <%= @project.to_s %>
  </h1>

  <p>
    <%= @project.description %> <br/>
    <%= link_to @project.url, @project.url %>
  </p>

  <%= render partial: 'project_nav', locals: {active: 'releases'} %>

  <% if @pagy.count > 0 %>
    <%= render @releases %>
    <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>  
  <% else %>
    <p>
      No releases found.
    </p>
  <% end %>
</div>