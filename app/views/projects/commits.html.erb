<% @meta_title = "#{@project} - Commits" %>
<% @meta_description = "Browse commit history for #{@project} with author details, timestamps, and change summaries" %>

<div class="container-md">

  <%= render 'nav' %>

  <h1>
    <%= @project.to_s %>
  </h1>

  <p>
    <%= @project.description %> <br/>
    <%= link_to @project.url, @project.url %>
  </p>

  <%= render partial: 'project_nav', locals: {active: 'commits'} %>

  <% if @pagy.count > 0 %>
    <%= render @commits %>
    <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>  
  <% else %>
    <p>
      No commits found.
    </p>
  <% end %>
</div>