<% if @collection %>
<div class="breadcrumb-section py-3  mt-3">
  <div class="container">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb bg-transparent p-0 mb-1">
        <li class="breadcrumb-item"><a href="/">Home</a></li><!-- if this is a project or collection you made, probably insert your name here? -->
        <li class="breadcrumb-item">
          <%= link_to @collection.name, clean_collection_path(@collection), class: "text-light" %>
        </li>
        <li class="breadcrumb-item active text-light" aria-current="page">
          <%= @project.name || @project.to_s.split('/').last %>
        </li>
      </ol>
    </nav>
  </div>
</div>
<% else %>
<div class="breadcrumb-section py-3  mt-3">
  <div class="container">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">Home</a></li><!-- if this is a project or collection you made, probably insert your name here? -->
        <li class="breadcrumb-item"><a href="#">Projects</a></li>
        <li class="breadcrumb-item active" aria-current="page"><%= @project.name || @project.to_s.split('/').last %></li>
      </ol>
    </nav>
  </div>
</div>
<% end %>

<div class="project-header purple-grad-bg pt-4 pb-4 mb-5">
  <div class="container">
    <div class="row">
      <% if @project.avatar_url.present? %>
      <div class="col-md-2 col-lg-1 mb-3 pt-1 d-flex align-items-start">
        <%= link_to owner_collection_project_path(@project), 
            class: "d-block", 
            title: "View all repositories by #{@project.owner_name || @project.owner}",
            data: { bs_toggle: "tooltip", bs_placement: "top" } do %>
          <img src="<%= @project.avatar_url %>" alt="<%= @project.to_s %> logo" class="img-fluid project-logo" onerror="this.style.display='none'" style="cursor: pointer;" />
        <% end %>
      </div>
      <% end %>
      <div class="col-12
      <% if @project.avatar_url.present? %>
        col-md-10 col-lg-11
      <% end %>
      ">
      
        <h1 class="display-1 extra-bold"><%= @project.name || @project.to_s.split('/').last %></h1>
        <div class="d-xl-flex justify-content-between align-items-center mb-2">
          <div>
            <% if @project.last_synced_at %>
              <p><%= @project.description %></p>
            <% end %>
            <p class="mb-0 text-muted"><%= @project.to_s %></p>
          </div>
          <div class="d-flex gap-2 align-self-start mt-3 mt-xl-0">
            <% if logged_in? %>
              <% if current_user.has_project?(@project) %>
                <%= link_to remove_from_list_project_path(@project), method: :delete,
                    class: "btn btn-warning btn-sm rounded-pill",
                    data: { 
                      bs_toggle: "tooltip", 
                      bs_placement: "top",
                      confirm: "Remove this project from your projects list?"
                    },
                    title: "Remove from your projects" do %>
                  <%= bootstrap_icon 'heart-fill',
                        width:12, height:12, aria_hidden:'true',
                        focusable:'false', role:'img', class:'me-1' %>
                  In your projects
                <% end %>
              <% else %>
                <%= link_to add_to_list_project_path(@project), method: :post,
                    class: "btn btn-outline-light btn-sm rounded-pill",
                    data: { bs_toggle: "tooltip", bs_placement: "top" },
                    title: "Add to your projects" do %>
                  <%= bootstrap_icon 'heart',
                        width:12, height:12, aria_hidden:'true',
                        focusable:'false', role:'img', class:'me-1' %>
                  Add to your projects
                <% end %>
              <% end %>
            <% end %>
            <a id="copyLink"
              href="javascript:void(0)"
              role="button"
              class="btn btn-primary btn-primary--dark btn-sm rounded-pill"
              data-bs-toggle="tooltip"
              data-bs-placement="top"
              title="Copy URL">
              <%= bootstrap_icon 'copy',
                    width:12, height:12, aria_hidden:'true',
                    focusable:'false', role:'img', class:'me-1' %>
              Share
            </a>
          </div>
        </div>
        
      </div>
    </div>
  </div>
</div>