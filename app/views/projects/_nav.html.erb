<div class="dashboard-layout__navigation">
  <ul class="nav nav-pills flex-column dboard-nav me-4">
    <li class="nav-item">
      <a class="nav-link <%= 'active' if params[:tab].blank? %>" href="<%= project_path_with_collection(@project) %>">Overview</a>
    </li>
    <li class="nav-item">
      <a class="nav-link <%= 'active' if params[:tab] == 'productivity' %>" href="<%= project_path_with_collection(@project, 'productivity') %>">Productivity</a>
    </li>
    <li class="nav-item">
      <a class="nav-link <%= 'active' if params[:tab] == 'responsiveness' %>" href="<%= project_path_with_collection(@project, 'responsiveness') %>">Responsiveness</a>
    </li>
    <li class="nav-item">
      <a class="nav-link <%= 'active' if params[:tab] == 'finance' %>" href="<%= project_path_with_collection(@project, 'finance') %>">Finance</a>
    </li>
    <li class="nav-item">
      <a class="nav-link <%= 'active' if params[:tab] == 'engagement' %>" href="<%= project_path_with_collection(@project, 'engagement') %>">Engagement</a>
    </li>
    <li class="nav-item">
      <a class="nav-link <%= 'active' if params[:tab] == 'adoption' %>" href="<%= project_path_with_collection(@project, 'adoption') %>">Adoption</a>
    </li>
    <li class="nav-item">
      <a class="nav-link <%= 'active' if params[:tab] == 'dependencies' %>" href="<%= project_path_with_collection(@project, 'dependencies') %>">Dependencies
        <span class="badge bg-secondary ms-1"><%= number_to_human(@project.total_dependencies_count) %></span>
      </a>
    </li>
    <li class="nav-item">
      <a class="nav-link <%= 'active' if params[:tab] == 'packages' %>" href="<%= project_path_with_collection(@project, 'packages') %>">Packages
        <span class="badge bg-secondary ms-1"><%= number_to_human(@project.packages_count || 0) %></span>
      </a>
    </li>
    <li class="nav-item">
      <a class="nav-link <%= 'active' if params[:tab] == 'security' %>" href="<%= project_path_with_collection(@project, 'security') %>">Security
        <span class="badge bg-secondary ms-1"><%= number_to_human(@project.advisories_count) %></span>
      </a>
    </li>
  </ul>
  <hr class="mt-5 me-3" />
  <div class="p-3 ">
    
    <h5 class="text-muted fs-6 font-weight-normal"><%= bootstrap_icon 'arrow-down-up',
    width: 18, height: 18, aria_hidden: 'true', focusable: 'false', role: 'img',  title: 'Last synced', class: 'flex-shrink-0 me-1'
    %>  Last sync</h5>
    <p class="small ms-4"><a href="<%= project_path_with_collection(@project, 'meta') %>"><%= @project.last_synced_at ? "#{time_ago_in_words(@project.last_synced_at)} ago" : 'Never' %></a></p>
 

    <% if Rails.env.development? %>
      <div class="dboard-nav__actions mt-4">
        <a href="<%= @collection ? sync_collection_project_path(@collection, @project) : sync_project_path(@project) %>" class="btn btn-primary rounded-pill">Sync Project</a>
      </div>
  <% end %>
  </div>
  
  
</div>