<% @meta_title = "#{@project} - Overview" %>
<% @meta_description = "Project overview for #{@project} including statistics, dependencies, packages, and community activity" %>

<%= render 'project_header' %>
<div class="container">

  <div class="dashboard-layout">
    <%= render 'nav' %>

    <div class="dashboard-layout__dboard">
      <div class="dboard__title-bar d-flex justify-content-between align-items-center mb-4">
        <h1>Overview</h1>
        <%= render 'bots' %>
      </div>
      <span class="sticky-sentinel"></span>
      <div class="dashboard-grid">  
        <% if @project.repository %>
        <div class="three-equal-widgets">

          <div class="card well p-3 border-0">
            <div class="card-body">
              <h5 class="card-title small">Owner</h5>
              <div class="stat-card mb-2">
                <div class="stat-card-body">
                  <span class="stat-card-text"><%= link_to @project.repository['owner'], owner_collection_project_path(@project) %></span>
                </div>
              </div>
            </div>
          </div>
          <div class="card well p-3 border-0">
            <div class="card-body">
              <h5 class="card-title small">Last commit</h5>
              <div class="stat-card mb-2">
                <div class="stat-card-body">
                  <span class="stat-card-text">
                    <% if @project.last_commit_at %>
                      <%= time_ago_in_words @project.last_commit_at %> ago
                    <% else %>
                      No commits found
                    <% end %> 
                  </span>
                </div>
              </div>
            </div>
          </div>
          <div class="card well p-3 border-0">
            <div class="card-body">
              <h5 class="card-title small">Last release</h5>
              <div class="stat-card mb-2">
                <div class="stat-card-body">
                  <span class="stat-card-text">
                    <% if @project.latest_tag_name %>
                      <%= @project.latest_tag_name %> (<%= time_ago_in_words @project.latest_tag_published_at %> ago)
                    <% else %>
                      No releases found
                    <% end %>
                  </span>
                </div>
              </div>
            </div>
          </div>
          
        </div>
        <div class="two-thirds-widget-group">
          <div class="card two-thirds-widget-group__small well p-3 border-0">
            <div class="card-body">
              <h5 class="card-title small">Licence</h5>
              <%= @project.licenses.map(&:upcase).uniq.join(', ') %>
            </div>
          </div>
          <div class="card two-thirds-widget-group__small well p-3 border-0">
            <div class="card-body">
              <h5 class="card-title small mb-4">Primary Language</h5>
              <div class="stat-card mb-2">
                <div class="stat-card-body">
                  <span class="stat-card-text">
                    <%= @project.language_with_default %>
                  </span>
                </div>
              </div>
            </div>
          </div>
          <div class="card two-thirds-widget-group__large well p-3 border-0">
            <div class="card-body">
              <h5 class="card-title small">Links</h5>
              <div class="limit-size-and-scroll">
                <ul class="list-unstyled">
                  <% @project.essential_links.each do |link| %>

                    <li class="mb-3">
                      <%= link_to link, target: "_blank", rel: "noopener noreferrer", class: "link-with-icon text-decoration-none text-body" do %>
                        <%= bootstrap_icon link_icon(link), width: 18, height: 18, class: "link-with-icon__icon", aria_hidden: "true" %>
                        <span class="link-with-icon__text"><%= display_link link %></span>
                      <% end %>
                    </li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div> 
        <% end %>

        <% if @project.packages.any? && @top_package.present? %>
          <div class="full-width-widget">
            <div class="card well p-3 border-0">
              <div class="card-body">
                <h5 class="card-title">Ranking 
                  <a href="#" aria-labelledby="ranking-help">
                    <%= bootstrap_icon 'question-circle',
                    width: 18, height: 18, aria_hidden: 'true', focusable: 'false', role: 'img', class: 'mb-1', title: 'what is ranking?'
                    %>
                    <span id="ranking-help" class="visually-hidden">What is ranking?</span>
                  </a>
                </h5>
                <div class="stat-card mb-2">
                  <div class="stat-card-body">
                      <span class="stat-card-title stat-card-title--large stat-card-number stat-card-number-positive">Top <%= @top_package.rankings['average'].round(1) %>%</span>
                      <span class="stat-card-text">
                        on <%= @top_package.registry_name %>
                      </span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
        <div class="full-width-widget">
          <div class="card well p-3 border-0">
              <div class="card-body">
                <h5 class="card-title">New PRs</h5>
                <div class="stat-card mb-2">
                  <div class="stat-card-body">
                    <span class="stat-card-title stat-card-title--large <%= @new_prs_this_period >= @new_prs_last_period ? 'stat-card-number-positive' : 'stat-card-number-negative' %>">
                      <%= number_to_human(@new_prs_this_period, precision: 1) %> <%= bootstrap_icon(@new_prs_this_period >= @new_prs_last_period ? 'caret-up-fill' : 'caret-down-fill', width: 18, height: 18, class: 'flex-shrink-0') %>
                    </span>
                    <span class="stat-card-text stat-card-text"><%= number_to_human(@new_prs_last_period, precision: 1) %> <%= last_period_text %></span>
                  </div>
                </div>
                <div class="chart-wrapper">
                  <canvas 
                    id="newPRsChart" 
                    width="600"
                    data-chart="line"
                    data-chart-data='<%= {labels: @new_prs_per_period.map(&:first), label: "New PRs", values: @new_prs_per_period.map(&:last)}.to_json.html_safe %>'
                    data-chart-options='<%= {scales: {y: {max: (@new_prs_per_period.map(&:last).max.to_i * 1.1).ceil}}}.to_json.html_safe %>'
                  ></canvas>
                </div>
              </div>
            </div>
          </div>
          <div class="three-equal-widgets">
          <%= stat_card_widget 'Open PRs', @open_prs_this_period, @open_prs_last_period,  increase_good: false, title_class: "card-title small", stat_size: "large" %>
          <%= stat_card_widget 'Open issues', @open_issues_this_period, @open_issues_last_period,  increase_good: false, title_class: "card-title small", stat_size: "large" %>
          <%= stat_card_widget 'Committers', @committers_this_period, @committers_last_period, title_class: "card-title small", stat_size: "large" %>
        </div>
        <% if @project.packages.any? && @top_package.present? %>
        <div class="three-equal-widgets">
          <%= stat_card_widget 'Dependent packages', @project.dependent_packages_count, nil, title_class: "card-title small", stat_size: "large" %>
          <%= stat_card_widget 'Dependent repos', @project.dependent_repos_count, nil, title_class: "card-title small", stat_size: "large" %>
          <%= stat_card_widget 'Downloads', @project.downloads, nil, title_class: "card-title small", stat_size: "large" %>
        </div>
        <% end %>
        <% if @project.collective.present? %>
        <div class="two-thirds-widgets">
          <%= stat_card_widget 'Balance', @balance_this_period, @balance_last_period, symbol: '$', increase_good: nil,  currency: true, title_class: "card-title small", card_class: " two-thirds-widgets__large" %>
          <%= stat_card_widget 'Amount spent', @amount_spent_this_period, @amount_spent_last_period, symbol: '$', increase_good: nil,  currency: true, stat_size: "small",  title_class: "card-title small", card_class: " two-thirds-widgets__small" %>
        </div>
        <div class="two-thirds-widgets">
          <%= stat_card_widget 'Amount received', @amount_received_this_period, @amount_received_last_period, symbol: '$', increase_good: nil,  currency: true, stat_size: "small", title_class: "card-title small", card_class: " two-thirds-widgets__small" %>
        </div>
        <% elsif @project.github_sponsors.present? %>
        <div class="three-equal-widgets">
          <%= stat_card_widget 'Active sponsors', @project.current_github_sponsors_count, nil, title_class: "card-title small", stat_size: "large" %>
          <%= stat_card_widget 'Total sponsors', @project.total_github_sponsors_count, nil, title_class: "card-title small", stat_size: "large" %>
          <div class="card well p-3 border-0">
            <div class="card-body">
              <h5 class="card-title small">Sponsor this project</h5>
              <div class="stat-card mb-2">
                <div class="stat-card-body">
                  <% if @project.github_sponsors_url.present? %>
                    <%= link_to @project.github_sponsors_url, target: "_blank", rel: "noopener", class: "btn btn-sm btn-outline-primary" do %>
                      <%= bootstrap_icon 'heart-fill', width: 16, height: 16, class: "me-1" %>
                      Sponsor on GitHub
                    <% end %>
                    <p class="small text-muted mt-2 mb-0">
                      From $<%= @project.github_minimum_sponsorship_amount %>/month
                    </p>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% end %>

      </div>
  </div>
</div>
<%= render 'project_footer' %>