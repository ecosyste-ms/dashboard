<% @meta_title = "#{@collection}" %>
<% @meta_description = "Adoption Stats for #{@collection}" %>

<%= render 'collection_header' %>
<div class="container">

  <div class="dashboard-layout">
    <%= render 'nav' %>

    <div class="dashboard-layout__dboard">
      <div class="d-md-flex justify-content-between align-items-center mb-4">
        <h1>Adoption</h1>
        <div class="form-check form-switch form-check-reverse bot-check fs-3">
          <label class="form-check-label" for="botToggle"><span class="visually-hidden">Bot data</span> <%= bootstrap_icon 'robot',
            width: 24, height: 24, aria_hidden: 'true', focusable: 'false', role: 'img', class: 'mb-1', title: 'what is ranking?'
          %></label>
          <input class="form-check-input " type="checkbox" role="switch" id="botToggle" checked>
        </div>
      </div>

      <div class="dashboard-grid">
        <% if @collection.packages.any? %>
          <div class="full-width-widget">
            <div class="card well p-3 border-0">
              <div class="card-body">
                <h5 class="card-title">Ranking 
                  <a href="#" aria-labelledby="ranking-help">
                    <%= bootstrap_icon 'question-circle',
                    width: 18, height: 18, aria_hidden: 'true', focusable: 'false', role: 'img', class: 'mb-1', title: 'what is ranking?'
                    %>
                    <span id="ranking-help" class="visually-hidden">What is ranking?</span>
                  </a>
                </h5>
                <div class="stat-card mb-2">
                  <div class="stat-card-body">
                    <div class="stat-card-body">
                      <span class="stat-card-title stat-card-title--large stat-card-number stat-card-number-positive">Top <%= @top_package.rankings['average'].round(1) %>%</span>
                      <span class="stat-card-text">
                        on <%= @top_package.registry_name %>
                      </span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="three-equal-widgets">
            <%= stat_card_widget 'Dependent packages', @collection.dependent_packages_count, nil, title_class: "card-title small", stat_size: "large" %>
            <%= stat_card_widget 'Dependent repos', @collection.dependent_repos_count, nil, title_class: "card-title small", stat_size: "large" %>
            <%= stat_card_widget 'Downloads', @collection.downloads, nil, title_class: "card-title small", stat_size: "large" %>
          </div>
          <% end %>

          <div class="three-equal-widgets">
            <%= stat_card_widget 'Watchers', @collection.watchers, nil, increase_good: true, symbol: '', title_class: "card-title small", stat_size: "large" %>
            <%= stat_card_widget 'Forks', @collection.forks, nil, increase_good: true, symbol: '', title_class: "card-title small", stat_size: "large" %>
            <%= stat_card_widget 'Stars', @collection.stars, nil, increase_good: true, symbol: '', title_class: "card-title small", stat_size: "large" %>
          </div>
        
        </div>
      </div>
    </div>
  </div>
</div>