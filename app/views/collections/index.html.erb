<% @meta_title = "Collections" %>
<% @meta_description = "Open Source Collections" %>

<div class="container">
  <h1 class="mt-5">Collections</h1>
  <div class="well p-4 mb-5">

      <div class="col-lg-10 container text-center">
      <h2 class="mt-3 mb-3">Create a collection</h2>
      <form class="row g-2 justify-content-center" action='<%= lookup_projects_path %>' method="post">
        <label for="repo_name">Enter a github repository URL</label>
        <div class="input-group rounded-input-group mt-3 mb-4">
          <input name='url' type="text" class="form-control" id="url" placeholder="URL: eg https://github.com/ecosyste-ms/packages" size="50">
          <button type="submit" class="btn btn-danger pe-4">Create collection</button>
        </div>
      </form>
    </div>
  </div>
  <h2 class="my-4">Your collections</h2>
  <%= render @collections %>
  <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>  
</div>