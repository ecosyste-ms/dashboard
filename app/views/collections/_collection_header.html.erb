<div class="breadcrumb-section py-3  mt-3">
  <div class="container">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb bg-transparent p-0 mb-1">
        <li class="breadcrumb-item"><a href="/">Home</a></li><!-- if this is aproject or collection you made, probably insert your name here? -->
        <li class="breadcrumb-item"><a href="<%= collections_path %>">Collections</a></li>
        <li class="breadcrumb-item active" aria-current="page"><%= @collection.to_s %></li>
      </ol>
    </nav>
  </div>
</div>

<div class="project-header purple-grad-bg pt-4 pb-4 mb-5">
  <div class="container">
    <div class="row">

      <div class="col-md-2 col-lg-1 mb-3 pt-1 d-flex align-items-start">
        <% if @collection.avatar_url.present? %>
          <img src="<%= @collection.avatar_url %>" alt="<%= @collection.to_s %> logo" class="img-fluid project-logo" onerror="this.style.display='none'" />
        <% else %>
          <%= image_tag("collections-default.png", alt: " ", class: "img-fluid project-logo", size: "130x130") %>
        <% end %>
      </div>

      <div class="col-12 col-md-10 col-lg-11">
        <h1 class="display-1 extra-bold"><%= @collection.to_s %></h1>
        <div class="d-md-flex justify-content-between align-items-center mb-2">
          <div>
            <% if @collection.last_synced_at %>
              <p><%= @collection.description %></p>
            <% end %>
            <p class="mb-0 text-muted">
              <% if @collection.visibility == 'private' %>
                Private collection
              <% else %>
                Collection
              <% end %>

              <% if @collection.github_organization_url.present? %>
                from GitHub organization
              <% elsif @collection.collective_url.present? %>
                from Open Collective
              <% elsif @collection.github_repo_url.present? %>
                from GitHub repo
              <% elsif @collection.dependency_file.present? %>
                from SBOM
              <% end %>
            </p>
          </div>
          <div class="d-flex gap-2 align-self-start mt-3 mt-xl-0">
            <a id="copyLink"
              href="javascript:void(0)"
              role="button"
              class="btn btn-primary btn-primary--dark btn-sm rounded-pill"
              data-bs-toggle="tooltip"
              data-bs-placement="top"
              title="Copy URL">
              <%= bootstrap_icon 'copy',
                width:12, height:12, aria_hidden:'true',
                focusable:'false', role:'img', class:'me-1' %>
              Share
            </a>
          </div>
        </div>

        
        
      </div>

    </div>
    <div class="row">
      <div class="col-12">
          <nav class="inverted-nav mt-2 pt-4">
            <ul class="nav nav-pills me-3">
              <li class="nav-item">
                <a href="<%= clean_collection_path(@collection, request.query_parameters) %>" class="nav-link me-3 <%= 'active' if action_name == 'show' %>">Dashboards</a>
              </li>
              <li class="nav-item">
                <a href="<%= collection_projects_path(@collection, request.query_parameters) %>" class="nav-link me-3 <%= 'active' if action_name == 'projects' %>">Projects</a>
              </li>
              <li class="nav-item">
                <a href="<%= meta_collection_path(@collection, request.query_parameters) %>" class="nav-link me-3 <%= 'active' if action_name == 'meta' %>">Metadata</a>
              </li>
              <% if @collection.user_id == current_user&.id %>
              <li class="nav-item">
                <%= link_to 'Edit', edit_collection_path(@collection),
                class: 'nav-link me-3' %>
              </li>
              <% end %>
              
  
            
            </ul>
          </nav>
      </div>
    </div>
  </div>
</div>
