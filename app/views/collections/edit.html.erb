<% @meta_title = "New Collection" %>
<% @meta_description = "Create a new collection" %>

<div class="container mt-5">
  <h1 class="mb-4">Edit collection</h1>
  <div class="row">
    <div class="col-12 col-lg-8">
           
      <%= form_with model: @collection, local: true do |f| %>
        <% if @collection.errors[:base].any? %>
          <div class="alert alert-danger" role="alert">
            <% @collection.errors[:base].each do |error| %>
              <%= error %>
            <% end %>
          </div>
        <% end %>
        
        <div class="form-group mb-3">
          <%= f.label :name, "Collection name", class: "form-label" %>
          <%= f.text_field :name, class: "form-control  border-purple-light" %>
        </div>
        <div class="form-group mb-3">
          <%= f.label :description, "Collection description " , class: "form-label" %>
          <%= f.text_area :description, class: "form-control  border-purple-light" %>
        </div>
        <%= render partial: "collections/visibility_fields", locals: { f: f } %>
        <div class="form-group">
          <%= f.submit "Save", class: "btn btn-primary rounded-pill" %>
        </div>
      <% end %>
</div>
  </div>
</div>  