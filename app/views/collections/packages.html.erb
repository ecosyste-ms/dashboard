<% @meta_title = "#{@collection.name} packages" %>
<% @meta_description = "Packages from projects in #{@collection.name}" %>

<%= render 'collection_header' %>
<div class="container">

  <div class="dashboard-layout">
    <%= render 'nav' %>

    <div class="dashboard-layout__dboard">
      <div class="dboard__title-bar d-flex justify-content-between align-items-center mb-4">
        <div>
          <h1>Packages</h1>
          <p class="text-muted">Software distributed by this community</p>
        </div>
      </div>
      
      <% if @pagy.count > 0 %>
        <%= render @packages %>
        <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>  
      <% else %>
        <p>
          No packages found.
        </p>
      <% end %>
    </div>
  </div>
</div>