<div class="form-group mb-3">
  <%= f.label :dependency_file, class: "form-label"  do %>
    <p class="mb-0">Upload an SBOM file</p>
    <p class="text-muted small mb-0">Upload a valid Software Bill Of Materials file</p>
  <% end %>
  <%= f.file_field :dependency_file, class: "form-control border-purple-light" %>
</div>

<div class="form-group mb-3">
  <%= f.label :github_repo_url, class: "form-label"  do %>
    <p class="mb-0">GitHubrepository URL</p>
    <p class="text-muted small mb-0">(Optional if providing an SBOM)</p>
  <% end %>
  <%= f.text_field :github_repo_url, class: "form-control border-purple-light", placeholder: "https://github.com/your/repo" %>
</div>

<div class="form-group mb-3">
  <%= f.label :name, "Name your collection", class: "form-label" %>
  <%= f.text_field :name, class: "form-control border-purple-light" %>
</div>

<div class="form-group mb-3">
  <%= f.label :description, "Describe your collection", class: "form-label" %>
  <%= f.text_area :description, class: "form-control border-purple-light", rows: "5" %>
</div>
