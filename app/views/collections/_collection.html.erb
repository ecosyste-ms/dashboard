<div class="card mb-3 pb-4 listing d-flex flex-row align-items-center" id="collection_<%= collection.id %>">
  <a href="<%= collection_path(collection) %>">
    <% if collection.avatar_url.present? %>
      <img src="<%= collection.avatar_url %>" alt="<%= project.name %> logo" class="project-logo img-fluid" onerror="this.style.display='none'" style="max-width: 60px;">
    <% else %>
      <%= image_tag("collections-default.png", alt: " ", class: "project-logo img-fluid", size: "130x130") %>
    <% end %>
  </a>
  <div class="card-body p-0 ms-3">
    
    <h3 class="card-title listing__title fs-5">
      <% if collection.visibility == 'private' %>
        <%= bootstrap_icon 'lock-fill',
        width: 18, height: 18, aria_hidden: 'true', focusable: 'false', role: 'img',  title: 'This collection is private', class: 'flex-shrink-0 me-1'
        %>
      <% end %>
      <%= link_to collection, collection_path(collection) %>
    </h3>
      
    <p class="listing__meta mb-2  ">
      <%= collection.description %>
    </p>
    <div class="mt-3 listing__details">
      <div class="d-flex align-items-top">
        <%= bootstrap_icon 'file-earmark-plus',
        width: 18, height: 18, aria_hidden: 'true', focusable: 'false', role: 'img',  title: 'Stars', class: 'flex-shrink-0 me-2'
        %> 
        <span class="me-3"><%= time_ago_in_words(collection.created_at) %> ago</span>
         <%= bootstrap_icon 'arrow-down-up',
        width: 18, height: 18, aria_hidden: 'true', focusable: 'false', role: 'img',  title: 'Stars', class: 'flex-shrink-0 me-2'
        %> 
        <span class="me-3"><%= collection.last_synced_at ? "#{time_ago_in_words(project.last_synced_at)} ago" : 'Never' %></span>
      </div>
    </div>
    <div class="mt-3 listing__details">
      <div class="d-flex align-items-center gap-3">
        <%= link_to edit_collection_path(collection), class: "btn btn-light fw-normal btn-sm d-inline-flex align-items-center", role: "button" do %>
          <%= bootstrap_icon 'pencil',
            width: 16, height: 16, aria_hidden: 'true', focusable: 'false', role: 'img', title: '', class: 'flex-shrink-0 me-2'
          %>
          Edit
        <% end %>
        <%= button_to collection_path(collection), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-light fw-normal btn-sm d-inline-flex align-items-center" do %>
          <%= bootstrap_icon 'trash3',
            width: 16, height: 16, aria_hidden: 'true', focusable: 'false', role: 'img', title: '', class: 'flex-shrink-0 me-1'
          %>
          Delete
        <% end %>
        <a href="javascript:void(0)" class="btn btn-light fw-normal btn-sm d-inline-flex align-items-center copy-to-clipboard-btn" 
            role="button" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Copy collection URL" data-copy-value="<%= request.base_url + collection_path(collection) %>">
        <%= bootstrap_icon 'copy',
          width: 16, height: 16, aria_hidden: 'true', focusable: 'false', role: 'img', title: '', class: 'flex-shrink-0 me-1'
        %>
        Share</a>
      </div>
    </div>
  </div>
</div>
