<div class="dashboard-layout__navigation">
  <ul class="nav nav-pills flex-column dboard-nav me-4">
    <li class="nav-item">
      <%= link_to "Overview",
          clean_collection_path(@collection, request.query_parameters),
          class: "nav-link #{'active' if action_name == 'show'}",
          aria: (action_name == "show" ? { current: "page" } : {}) %>
    </li>

    <li class="nav-item">
      <%= link_to "Productivity",
          productivity_collection_path(@collection, request.query_parameters),
          class: "nav-link #{'active' if action_name == 'productivity'}",
          aria: (action_name == "productivity" ? { current: "page" } : {}) %>
    </li>

    <li class="nav-item">
      <%= link_to "Responsiveness",
          responsiveness_collection_path(@collection, request.query_parameters),
          class: "nav-link #{'active' if action_name == 'responsiveness'}",
          aria: (action_name == "responsiveness" ? { current: "page" } : {}) %>
    </li>

    <li class="nav-item">
      <%= link_to "Finance",
          finance_collection_path(@collection, request.query_parameters),
          class: "nav-link #{'active' if action_name == 'finance'}",
          aria: (action_name == "finance" ? { current: "page" } : {}) %>
    </li>

    <li class="nav-item">
      <%= link_to "Engagement",
          engagement_collection_path(@collection, request.query_parameters),
          class: "nav-link #{'active' if action_name == 'engagement'}",
          aria: (action_name == "engagement" ? { current: "page" } : {}) %>
    </li>

    <li class="nav-item">
      <%= link_to "Adoption",
          adoption_collection_path(@collection, request.query_parameters),
          class: "nav-link #{'active' if action_name == 'adoption'}",
          aria: (action_name == "adoption" ? { current: "page" } : {}) %>
    </li>

    <li class="nav-item">
      <%= link_to dependencies_collection_path(@collection, request.query_parameters),
          class: "nav-link #{'active' if action_name == 'dependencies'}",
          aria: (action_name == "dependencies" ? { current: "page" } : {}) do %>
        Dependencies
        <span class="badge bg-secondary ms-1"><%= number_to_human(@collection.total_dependencies_count) %></span>
      <% end %>
    </li>

    <li class="nav-item">
      <%= link_to security_collection_path(@collection, request.query_parameters),
          class: "nav-link #{'active' if action_name == 'security'}",
          aria: (action_name == "security" ? { current: "page" } : {}) do %>
        Security
        <span class="badge bg-secondary ms-1"><%= number_to_human(@collection.advisories_count) %></span>
      <% end %>
    </li>

    <li class="nav-item">
      <%= link_to collection_projects_path(@collection, request.query_parameters),
          class: "nav-link #{'active' if action_name == 'projects'}",
          aria: (action_name == "projects" ? { current: "page" } : {}) do %>
        Projects
        <span class="badge bg-secondary ms-1"><%= number_to_human(@collection.projects.count) %></span>
      <% end %>
    </li>
  </ul>

  <hr class="mt-5 me-3" />
  <div class="p-3 ">
    
    <h5 class="text-muted fs-6 font-weight-normal"><%= bootstrap_icon 'arrow-down-up',
    width: 18, height: 18, aria_hidden: 'true', focusable: 'false', role: 'img',  title: 'Last synced', class: 'flex-shrink-0 me-1'
    %>  Last sync</h5>
    <p class="small ms-4"><a href="<%= meta_collection_path(@collection, request.query_parameters) %>"><%= @collection.last_synced_at ? "#{time_ago_in_words(@collection.last_synced_at)} ago" : 'Never' %></a></p>
      <% if Rails.env.development? %>
        <%= link_to 'Sync collection', sync_collection_path(@collection), method: :get, class: 'btn btn-primary rounded-pill' %>
      <% end %>
  </div>
  
</div>