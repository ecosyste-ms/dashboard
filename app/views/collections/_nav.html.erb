<div class="dashboard-layout__navigation">
  <ul class="nav nav-pills flex-column dboard-nav me-4">
    <li class="nav-item">
      <a class="nav-link <%= 'active' if action_name == 'show' %>" href="<%= clean_collection_path(@collection, request.query_parameters) %>">Overview</a>
    </li>
    <li class="nav-item">
      <a class="nav-link <%= 'active' if action_name == 'productivity' %>" aria-current="page" href="<%= productivity_collection_path(@collection, request.query_parameters) %>">Productivity</a>
    </li>
    <li class="nav-item">
      <a class="nav-link <%= 'active' if action_name == 'responsiveness' %>" href="<%= responsiveness_collection_path(@collection, request.query_parameters) %>">Responsiveness</a>
    </li>
    <li class="nav-item">
      <a class="nav-link <%= 'active' if action_name == 'finance' %>" href="<%= finance_collection_path(@collection, request.query_parameters) %>">Finance</a>
    </li>
    <li class="nav-item">
      <a class="nav-link <%= 'active' if action_name == 'engagement' %>" href="<%= engagement_collection_path(@collection, request.query_parameters) %>">Engagement</a>
    </li>
    <li class="nav-item">
      <a class="nav-link <%= 'active' if action_name == 'adoption' %>" href="<%= adoption_collection_path(@collection, request.query_parameters) %>">Adoption</a>
    </li>
    <li class="nav-item">
      <a class="nav-link <%= 'active' if action_name == 'dependencies' %>" href="<%= dependencies_collection_path(@collection, request.query_parameters) %>">Dependencies
        <span class="badge bg-secondary ms-1"><%= number_to_human(@collection.total_dependencies_count) %></span>
      </a>
    </li>
    <li class="nav-item">
      <a class="nav-link <%= 'active' if action_name == 'security' %>" href="<%= security_collection_path(@collection, request.query_parameters) %>">Security
        <span class="badge bg-secondary ms-1"><%= number_to_human(@collection.advisories_count) %></span>
      </a>
    </li>
    <li class="nav-item">
      <a class="nav-link <%= 'active' if action_name == 'projects' %>" href="<%= collection_projects_path(@collection, request.query_parameters) %>">Projects
        <span class="badge bg-secondary ms-1"><%= number_to_human(@collection.projects.count) %></span>
      </a>
    </li>
  </ul>

  <hr class="mt-5 me-3" />
  <div class="p-3 ">
    
    <h5 class="text-muted fs-6 font-weight-normal"><%= bootstrap_icon 'arrow-down-up',
    width: 18, height: 18, aria_hidden: 'true', focusable: 'false', role: 'img',  title: 'Last synced', class: 'flex-shrink-0 me-1'
    %>  Last sync</h5>
    <p class="small ms-4"><a href="<%= meta_collection_path(@collection, request.query_parameters) %>"><%= @collection.last_synced_at ? "#{time_ago_in_words(@collection.last_synced_at)} ago" : 'Never' %></a></p>
      <% if Rails.env.development? %>
        <%= link_to 'Sync collection', sync_collection_path(@collection), method: :get, class: 'btn btn-primary rounded-pill' %>
      <% end %>
  </div>
  
</div>