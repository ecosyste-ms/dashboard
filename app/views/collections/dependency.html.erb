<% @meta_title = "#{@collection}" %>
<% @meta_description = "Dependency Stats for #{@collection}" %>
<%= render 'collection_header' %>

<div class="container">

  <div class="dashboard-layout">
    <%= render 'nav' %>

    <div class="dashboard-layout__dboard">
      <div class="d-md-flex justify-content-between align-items-center mb-4">
        <h1>Dependency</h1>
        <a href="#" class="custom-form-check-input custom-switch-link active" role="switch"><span class="visually-hidden">Show bots</span><%= bootstrap_icon 'robot',
          width: 24, height: 24, aria_hidden: 'true', focusable: 'false', role: 'img', class: 'mb-1', title: ''
        %></a>
      </div>
        <div class="dashboard-grid">
          <div class="three-equal-widgets">
            <%= stat_card_widget 'Direct dependencies', @collection.direct_dependencies.length, nil, title_class: "card-title small", stat_size: "large" %>
            <%= stat_card_widget 'Development dependencies', @collection.development_dependencies.length, nil, title_class: "card-title small", stat_size: "large" %>
            <%= stat_card_widget 'Transitive dependencies', @collection.transitive_dependencies.length, nil, title_class: "card-title small", stat_size: "large" %>
          </div>
    </div>
  </div>
</div>